  <h1>タスク一覧</h1>
  <p>ユーザ: <%= current_user.name %></p>
  <% if @tasks.any? %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>回線ID</th>
          <th>ステータス</th>
          <th>タスク</th>
        </tr>
      </thead>
      <tbody>
        <% @tasks.each do |task| %>
          <tr>
            <td><%= link_to task.id, task %></td>
            <td><%= task.status %></td>
            <td><%= task.content %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div>
      <%== pagy_bootstrap_nav(@pagy) %>
    </div>
  <% end %>
  
  <%= link_to '新規タスク登録',new_task_path, class: "btn btn-primary" %>
